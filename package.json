{
  "name": "my-deck",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon",
    "build": "tsc --project tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src -o ./server && npm run cp-commands && npm run cp-db",
    "cp-commands": "cp-cli ./src/commands/commands.json ./server/commands/commands.json",
    "cp-db": "cp-cli ./src/infrastructure/sqlite/my-deck.db ./server/infrastructure/sqlite/my-deck.db",
    "install-module": "ts-node --project ./tsconfig.json -r tsconfig-paths/register"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-winston": "^4.2.0",
    "node-key-sender": "^1.0.11",
    "robotjs": "^0.6.0",
    "socket.io": "^4.4.1",
    "sqlite3": "^5.0.2",
    "uniqid": "^5.4.0",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.13",
    "@types/socket.io": "^3.0.2",
    "@types/sqlite3": "^3.1.8",
    "@types/uniqid": "^5.3.2",
    "cp-cli": "^2.0.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "0.0.9",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  }
}
